<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <main>
        <section class="center main-content">
        <h1>Resultados de búsqueda.</h1>
        
        
      <% for( let i = 0; i < posteo.length; i++ ) { %>
        <article class="post">
            <div class="info-usuario ">
                <img class="img-perfil" src="<%=info[i].foto%>" alt="">
                <h4>
                    <a href="/users/detalleUsuario/<%=posteo[i].id_usuario%>"><%=posteo[i].username%> </a>
                </h4>
            </div>
            <div class="post-body">
                <a href='/post/detalle/<%= posteo[i].id_posteo%> '>
                    <img src="<%= posteo[i].foto%> " alt="">
                    <p><%= posteo[i].texto %> </p>
                </a>
            </div>
            <ul class="post-reacciones">
                <li>
                    <i class="fa-regular fa-heart"></i>
                </li>
                <li>
                    <i class="fa-regular fa-comment"></i>
                </li>
            </ul>
            <div class="post-comentarios">
                <h4>Comentarios</h4>
                <ul>
                    <li>
                        <a href="/users/detalleUsuario/1"><%= posteo[i].comentarios[0].nombre %></a>
                        <span><%= posteo[i].comentarios[0].texto  %> </span>
                    </li>
                    <li>
                        <a href="/users/detalleUsuario/1"><%= posteo[i].comentarios[1].nombre %></a>
                        <span><%= posteo[i].comentarios[1].texto  %> </span>
                    </li>
                    <a href="/">Ver más...</a>
                </ul>
            </div>
        </article>
      <% } %>
        </section>
    </main>
    <%- include('./partials/footer') %> 

</body>

</html>