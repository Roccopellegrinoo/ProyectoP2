<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <main>
        <div class="user-detail container">
            <section class="top main-content">
               
                <img class="profile" src="/images/usuarios/<%=usuariodb.foto%>" alt="">
                <div class="info-usuario">
                    <p><%=usuariodb.username%></p> 
                    <a class="follow" href="/users/editarPerfil/0"><i class="fa-solid fa-user-gear"></i></a>
                    <ul class="meta">
                        <li><%=usuariodb.Posteos.length %> posteos </li>
                        <li><%=usuariodb.Seguidores.length %> seguidores</li>
                        <li><%=usuariodb.Seguidos.length %> seguidos</li>
                    </ul>
                    
                </div>
            </section>
            <section class="bottom">
                <% for (let i=0; i<usuariodb.Posteos.length; i++){  %> 
                    <article class="post">
                    <% let url= `/posts/detallePost/${usuariodb.Posteos[i].id}`%> 
                    <a href="<%= url%>">
                        <img src="/images/posteos/<%=usuariodb.Posteos[i].imagen %>" alt="">
                        <p><%=usuariodb.Posteos[i].texto%></p>
                    </a>
                     </article>
                 <% } %>
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %> 
</body>

</html>