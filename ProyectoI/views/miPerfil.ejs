<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <main>
        <div class="user-detail container">
            <section class="top main-content">
               
                <img class="profile" src="<%=usuario.foto%>" alt="">
                <div class="info-usuario">
                    <p><%=usuario.username%></p> 
                    <a class="follow" href="/users/editarPerfil/0"><i class="fa-solid fa-user-gear"></i></a>
                    <ul class="meta">
                        <li><%=usuario.posteos %> posteos </li>
                        <li><%=usuario.seguidores %> seguidores</li>
                        <li><%=usuario.seguidos %> seguidos</li>
                    </ul>
                    
                </div>
            </section>
            <section class="bottom">
                <% for (let i=0; i<posteos.length; i++){  %> 
                    <%if(usuario.id == posteos[i].id_usuario){ %>   
                <article class="post">
                    <% let url= `/posts/detallePost/${i}`%> 
                    <a href="<%= url%>">
                        <img src="<%=posteos[i].foto %>" alt="">
                        <p><%=posteos[i].texto%></p>
                    </a>
                </article>
           <% } %>
           <% } %>
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %> 
</body>

</html>