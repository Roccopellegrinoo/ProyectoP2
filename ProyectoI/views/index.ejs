<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <main>
        <section class="center main-content">
            <% for (let i=0; i<data.length; i++){  %> 
            <article class="post">
                <div class="info-usuario ">
                    <img class="img-perfil" src="<%=info[i].foto%> " alt="">
                    <h4>
                        <a href="/users/detalleUsuario/0 "><%=info[i].username %> </a>
                    </h4>
                </div>
                <div class="post-body">
                    <% let url = `/posts/detallePost/${i}` %> 
                    <a href='/post/detalle/<%= data[i].id_posteo%> '>
                        <img src="<%= data[i].foto%> " alt="">
                        <p><%= data[i].texto %> </p>
                    </a>
                </div>
                <ul class="post-reacciones">
                    <li>
                        <i class="fa-regular fa-heart"></i>
                    </li>
                    <li>
                        <i class="fa-regular fa-comment"></i>
                    </li>
                </ul>
                <div class="post-comentarios">
                    <h4>Comentarios</h4>
                    <ul>
                        <li>
                            <a href="/users/detalleUsuario/1"><%= data[i].comentarios[0].nombre %></a>
                            <span><%= data[i].comentarios[0].texto  %> </span>
                        </li>
                        <li>
                            <a href="/users/detalleUsuario/1"><%= data[i].comentarios[1].nombre %></a>
                            <span><%= data[i].comentarios[1].texto  %> </span>
                        </li>
                        <a href="/">Ver m√°s...</a>
                    </ul>
                </div>
            </article>
           <% } %> 
        </section>    
    </main>

    <%- include('./partials/footer') %> 


</body>

</html>