<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <main>
        <section class="center main-content">
            <% for (let i=0; i<posteos.length; i++){  %> 
            <article class="post">
                <div class="info-usuario ">
                    <img class="img-perfil" src="/images/usuarios/<%=posteos[i].usuario.foto%> " alt="">
                    <h4>
                        <a href='/users/detalleUsuario/<%=posteos[i].id_usuario%>'><%=posteos[i].usuario.usuario %> </a>
                    </h4>
                </div>
                <div class="post-body">
                    <a href='/posts/detallePost/<%= posteos[i].id%> '>
                        <img src="/images/posteos/<%= posteos[i].imagen%> " alt="">
                        <p><%= posteos[i].texto_descriptivo %> </p>
                    </a>
                </div>
                <ul class="post-reacciones">
                    <li>
                        <i class="fa-regular fa-heart"></i>
                    </li>
                    <li>
                        <i class="fa-regular fa-comment"></i>
                    </li>
                </ul>
                <div class="post-comentarios">
                    <h4>Comentarios</h4>
                    <ul>
                        <% for(let j=0; j < posteos[i].Comentarios.length; j++) { %>
                            <li>
                                <a href="/users/detalleUsuario/<%= posteos[i].Comentarios[j].id %>"><%= posteos[i].Comentarios[j].usuario.usuario %></a>
                                <span><%= posteos[i].Comentarios[j].texto  %> </span>
                            </li>
                        <% } %>
                        <a href="/posts/detallePost/<%= posteos[i].id %>">Ver m√°s...</a>
                    </ul>
                </div>
            </article>
           <% } %> 
        </section>    
    </main>

    <%- include('./partials/footer') %> 


</body>

</html>